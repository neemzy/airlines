{% extends 'base.html.twig' %}

{% block containerClass %}{{ parent() ~ ' main-container--board' }}{% endblock %}

{% block body %}

<div
    class="board"
    data-name="{{ board.name }}"
    data-week="{{ week }}"
    data-year="{{ year }}"
    data-prevUrl="{{ url('board_show', { id: board.id, week: prevWeek, year: prevYear }) }}"
    data-nextUrl="{{ url('board_show', { id: board.id, week: nextWeek, year: nextYear }) }}"
    data-boardUrl="{{ url('board.update', { id: board.id }) }}"
    data-weekUrl="{{ url('weekdays', { week: week, year: year }) }}"
    data-memberUrl="{{ url('member.list', { id: board.id }) }}"
></div>

{% endblock %}