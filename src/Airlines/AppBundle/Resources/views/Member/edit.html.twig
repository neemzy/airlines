{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Member edit</h1>

    {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
        {{ form_row(edit_form.name) }}
        {% if entity.getAvatarWebPath %}
            <img src="/{{ entity.getAvatarWebPath }}" />
        {% endif %}
        {{ form_row(edit_form.avatarFile) }}
        {{ form_row(edit_form.board) }}
        {{ form_row(edit_form.submit) }}
    {{ form_end(edit_form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('member') }}">
            Back to the list
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
