{% extends '::base.html.twig' %}

{% block body %}
    <h1>Task edit</h1>

    {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
        {{ form_row(edit_form.name) }}
        {{ form_row(edit_form.date) }}
        {{ form_row(edit_form.estimate) }}
        {{ form_row(edit_form.consumed) }}
        {{ form_row(edit_form.remaining) }}
        {{ form_row(edit_form.member) }}

        <div class="form-btn-group">
            {{ form_widget(edit_form.submit) }}
            <a class="btn" href="{{ path('task') }}">Back to the list</a>
            <label class="btn btn-danger" for="form_submit" onclick="return confirm('Are you sure ?');">Delete</label>
        </div>
    {{ form_end(edit_form) }}

    {{ form_start(delete_form, { attr: { class: 'hidden' } }) }}
        {{ form_widget(delete_form.submit) }}
    {{ form_end(delete_form) }}
{% endblock %}
