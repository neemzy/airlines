{% extends '::base.html.twig' %}

{% block body %}
    <h1>Member edit</h1>

    {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
        {{ form_row(edit_form.name) }}
        {{ form_row(edit_form.avatarFile) }}

        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <div class="avatar avatar--large" style="background-image: url('/{{ entity.getAvatarWebPath }}');"></div>
            </div>
        </div>

        {{ form_row(edit_form.color) }}
        {{ form_row(edit_form.board) }}

        <div class="form-btn-group">
            {{ form_widget(edit_form.submit) }}
            <a class="btn" href="{{ path('member') }}">Back to the list</a>
            <label class="btn btn-danger" for="form_submit" onclick="return confirm('Are you sure ?');">Delete</label>
        </div>
    {{ form_end(edit_form) }}

    {{ form_start(delete_form, { attr: { class: 'hidden' } }) }}
        {{ form_widget(delete_form.submit) }}
    {{ form_end(delete_form) }}
{% endblock %}
